<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schremas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Editar">

    <ImageView
        android:id="@+id/fotografia1"
        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/foto" />

    <Button
        android:id="@+id/btnAudio"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="118dp"
        android:text="Grabar Audio" />

    <EditText
        android:id="@+id/txtNombre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAudio"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/txtDescripcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNombre1"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:hint="DescripciÃ³n" />

    <EditText
        android:id="@+id/txtFecha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescripcion1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="96dp"
        android:ems="10"
        android:inputType="date"
        android:text="Fecha: DD/MM/YYYY" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFecha1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="131dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Guardar" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActualizar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="129dp"
        android:text="Ver"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:text="Editar"
        android:textColor="@color/black"
        android:textSize="30dp" />

</RelativeLayout>